\end_layout

\begin_layout Standard
Expand the numerator, 
\begin_inset Formula $D_{\phi}^{3}+(p_{1}.k)^{3}+(D_{\phi}+mass)(p_{1}.k)^{2}+(D_{\phi}+mass+D_{\phi}^{2})(p_{1}.k)+D_{\phi}^{2}+mass$
\end_inset

,then these terms we have and how to calculate them are listed below
\begin_inset Formula 
\begin{align*}
\frac{(p_{1}.k)^{3}}{D_{\phi}D_{\Lambda}^{4}} & =0\\
\frac{D_{\phi}^{3}}{D_{\phi}D_{\Lambda}^{4}} & =\frac{D_{\phi}^{2}}{D_{\Lambda}^{4}}\ divergence\\
\frac{(p_{1}.k)^{2}}{D_{\phi}D_{\Lambda}^{4}} & =\frac{(p_{1}^{+}k^{-})^{2}+(p_{1}^{-}k^{+}-p_{1}^{\perp}.k^{\perp})p_{1}^{+}k^{-}+(p_{1}^{-}k^{+})^{2}+(p_{1}^{\perp}.k^{\perp})^{2}}{D_{\phi}D_{\Lambda}^{4}}\\
\frac{D_{\phi}(p_{1}.k)^{2}}{D_{\phi}D_{\Lambda}^{4}} & =\frac{(p_{1}^{+}k^{-})^{2}+(p_{1}^{-}k^{+}-p_{1}^{\perp}.k^{\perp})p_{1}^{+}k^{-}+(p_{1}^{-}k^{+})^{2}+(p_{1}^{\perp}.k^{\perp})^{2}}{D_{\Lambda}^{4}}\\
\frac{(p_{1}.k)}{D_{\phi}D_{\Lambda}^{4}} & =\frac{\frac{1}{2}(p_{1}^{-}k^{+}+p_{1}^{+}k^{-})-(p_{1}^{\perp}.k^{\perp})}{D_{\phi}D_{\Lambda}^{4}}\\
\frac{D_{\phi}(p_{1}.k)}{D_{\phi}D_{\Lambda}^{4}} & =\frac{\frac{1}{2}(p_{1}^{-}k^{+}+p_{1}^{+}k^{-})-(p_{1}^{\perp}.k^{\perp})}{D_{\Lambda}^{4}}\\
\frac{D_{\phi}^{2}(p_{1}.k)}{D_{\phi}D_{\Lambda}^{4}} & =(D_{\Lambda}+\Lambda^{2}-m_{\phi}^{2})\frac{\frac{1}{2}(p_{1}^{-}k^{+}+p_{1}^{+}k^{-})-(p_{1}^{\perp}.k^{\perp})}{D_{\Lambda}^{4}}\\
 & =\frac{\frac{1}{2}(p_{1}^{-}k^{+}+p_{1}^{+}k^{-})-(p_{1}^{\perp}.k^{\perp})}{D_{\Lambda}^{3}}+(\Lambda^{2}-m_{\phi}^{2})\frac{\frac{1}{2}(p_{1}^{-}k^{+}+p_{1}^{+}k^{-})-(p_{1}^{\perp}.k^{\perp})}{D_{\Lambda}^{4}}\\
\frac{D_{\phi}^{2}}{D_{\phi}D_{\Lambda}^{4}} & =\frac{D_{\phi}}{D_{\Lambda}^{4}}=\frac{(D_{\Lambda}+\Lambda^{2}-m_{\phi}^{2})}{D_{\Lambda}^{4}}
\end{align*}

\end_inset


\end_layout

