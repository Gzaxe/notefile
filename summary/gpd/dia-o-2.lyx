\begin_inset Formula 
\begin{align*}
\int dk^{-}\frac{(k^{-})^{n}}{D_{\phi}^{a}(k)D_{\Lambda}^{b}(k)} & =\frac{\Gamma(a+b)}{\Gamma(a)\Gamma(b)}\int dk^{-}(k^{-})^{n}\int_{0}^{1}dx\frac{x^{a-1}(1-x)^{b-1}}{(k^{2}-\Omega+i\epsilon)^{a+b}}\\
 & =\frac{\Gamma(a+b)}{\Gamma(a)\Gamma(b)}\int_{0}^{1}dxx^{a-1}(1-x)^{b-1}\int dk^{-}\frac{(k^{-})^{n}}{(k^{+}k^{-}-k^{\perp2}-\Omega+i\epsilon)^{a+b}}\\
 & ->\frac{\Gamma(a+b)}{\Gamma(a)\Gamma(b)}\int_{0}^{1}dxx^{a-1}(1-x)^{b-1}\int dk^{-}\frac{\partial^{n}}{\partial k^{+n}}\frac{1}{(k^{+}k^{-}-k^{\perp2}-\Omega+i\epsilon)^{a+b-n}}\\
 & =\frac{\Gamma(a+b)}{\Gamma(a)\Gamma(b)}\frac{\partial^{n}}{\partial k^{+n}}\int_{0}^{1}dxx^{a-1}(1-x)^{b-1}\int dk^{-}\frac{1}{(k^{+}k^{-}-k^{\perp2}-\Omega+i\epsilon)^{a+b-n}}\\
 & =\frac{\Gamma(a+b)}{\Gamma(a)\Gamma(b)}\frac{\partial^{n}}{\partial k^{+n}}\int_{0}^{1}dxx^{a-1}(1-x)^{b-1}\frac{\partial^{a+b-2-n}}{\partial\Omega^{a+b-2-n}}\int dk^{-}\frac{1}{(k^{2}-\Omega)^{2}}\\
 & =\frac{\Gamma(a+b)}{\Gamma(a)\Gamma(b)}\frac{\partial^{n}}{\partial k^{+n}}\int_{0}^{1}dxx^{a-1}(1-x)^{b-1}\frac{\partial^{a+b-2-n}}{\partial\Omega^{a+b-2-n}}\frac{2\pi i}{k^{\perp^{2}}+\Omega}\delta(k^{+})
\end{align*}

